[colors]
;background
colorbg = ${xrdb:background:#212020}
color00 = ${xrdb:color0:#212020}
color08 = ${xrdb:color8:#3b3939}
color01 = ${xrdb:color1:#343277}
color09 = ${xrdb:color9:#44419b}
color02 = ${xrdb:color2:#51433b}
color10 = ${xrdb:color10:#6e5b50}
color03 = ${xrdb:color3:#7e6249}
color11 = ${xrdb:color11:#9e7b5c}
color04 = ${xrdb:color4:#b49865}
color12 = ${xrdb:color12:#c5af87}
color05 = ${xrdb:color5:#667380}
color13 = ${xrdb:color13:#808c99}
color06 = ${xrdb:color6:#9aa9b5}
color14 = ${xrdb:color14:#b7c2cb}
;foreground
colorfg = ${xrdb:foreground:#212020}
color07 = ${xrdb:color7:#edede9}
color15 = ${xrdb:color15:#ffffff}

[bar/center]
monitor = ${env:MONITOR:DisplayPort-0}
width = 100%
height = 25
;offset-x = 5%
;offset-y = 50
radius = 0.0
fixed-center = false

background = ${colors.colorbg}
foreground = ${colors.colorfg}

line-size = 2
line-color = #fff

;Si activamos la opcion de wm-margin los podemos poner por separado para ajustar
border-top-size = 20 
border-right-size = 20 
border-bottom-size = 0
border-left-size = 20 
;border-size = 20 
border-color = rgba(255, 255, 255, 0)

module-margin-left = 1
module-margin-right = 1

;font-0 = terminus:pixelsize=6;0
font-0 = tewii:pixelsize=10;0

modules-left = i3-c
modules-center = date
modules-right = temperature-c

cursor-click = pointer
cursor-scroll = ns-resize

[bar/left]
monitor = ${env:MONITOR:DisplayPort-1}
width = 100%
height = 25
radius = 0.0
fixed-center = false

background = ${colors.colorbg}
foreground = ${colors.colorfg}

line-size = 2
line-color = #fff

border-top-size = 20 
border-right-size = 20 
border-bottom-size = 0
border-left-size = 20 
;border-size = 20 
border-color = rgba(255, 255, 255, 0)

module-margin-left = 1
module-margin-right = 1

;font-0 = terminus:pixelsize=6;0
font-0 = tewii:pixelsize=10;0

modules-left = i3-l
modules-center = time
modules-right = xkeyboard

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:75:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

;format-prefix = ""
;format-prefix-foreground = ${colors.foreground-alt}
;format-prefix-underline = ${colors.color11}

label-layout = %layout%
label-layout-underline = ${colors.color06}
label-layout-padding = 2

;label-indicator-padding = 2
;label-indicator-margin = 5
;label-indicator-background = ${colors.secondary}
;label-indicator-underline = ${colors.secondary}

[module/i3-c]
type = internal/i3
format =" <label-state> <label-mode> "
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

;label-mode-padding = 2
;label-mode-foreground = #000
;label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.color02}
label-focused-underline = ${colors.color06}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.color03}
label-unfocused-underline = ${colors.color03}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.color05}
label-visible-underline = ${colors.color05} 
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.color07}
label-urgent-foreground = ${colors.color00}
label-urgent-underline = ${colors.color00}
label-urgent-padding = 2


[module/i3-l]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

;label-mode-padding = 2
;label-mode-foreground = #000
;label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.color02}
label-focused-underline = ${colors.color06}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.color03}
label-unfocused-underline = ${colors.color03}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-foreground = ${colors.color05}
label-visible-underline = ${colors.color05} 
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.color07}
label-urgent-foreground = ${colors.color00}
label-urgent-underline = ${colors.color00}
label-urgent-padding = 2

[module/time]
type = internal/date
interval = 5
format-padding = 2

time = %H:%M
time-alt = %H:%M:%S

;format-prefix = 
;format-prefix-foreground = ${colors.color14}
format-underline = ${colors.color06}

label = %time%

[module/date]
type = internal/date
interval = 86400
;format-padding = 2

date = Today is %A the %e of %B
date-alt = %d - %b

;format-prefix = 
;format-prefix-foreground = ${colors.color14}
format-underline = ${colors.color06}

label = %date%

[module/temperature-c]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp1_input
warn-temperature = 60

format = <ramp> <label>
format-underline = ${colors.color06}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}
format-padding = 2


label = %temperature-c%
label-warn = %temperature-c%
;label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
;ramp-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0
